############################################################
# Email Post Action Configuration
# ----------------------------------------------------------
# Used by post_action_email.sh
#
# SECURITY NOTES:
# - DO NOT commit this file to public repositories
# - Recommended permission:
#     chmod 600 post_action_email.env
############################################################

# ----------------------------------------------------------
# REQUIRED
# ----------------------------------------------------------

# Recipient email address (comma-separated allowed)
EMAIL_TO="admin@domain.com"

# Sender email address (must match msmtp account)
EMAIL_FROM="hi@domain.com"

# Subject prefix (MUST be quoted if contains spaces or symbols)
EMAIL_SUBJECT_PREFIX="[DATABASE BACKUP]"

# ----------------------------------------------------------
# OPTIONAL
# ----------------------------------------------------------

# Override hostname shown in email
# Leave empty to use system hostname
EMAIL_HOSTNAME=""

# Attach log file on SUCCESS as well
# true / false
EMAIL_ATTACH_LOG_ON_SUCCESS=true
